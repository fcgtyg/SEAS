            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/widget_75_black.png"
            background_down: "img/widget_75_gray.png"
            size_hint: .2, .1
            pos_hint: {"center_x": .875, "center_y": .65}
            on_release: root.on_add_exam()

        ListView:
            id: list_exams
            size_hint: .5, .5
            pos_hint: {"center_x": .5, "center_y": .3}

        Image:
            id: img_info_top
            source: "img/widget_75_black.png"
            opacity: 0
            keep_ratio: False
            allow_stretch: True
            size_hint: .2, .1
