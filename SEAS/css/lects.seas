        Label:
            id: txt_info_head
            text: "..."
            opacity: 0
            color: 0,0,0,0.75
            multiline: False
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            size_hint: .2, .1
            pos_hint: {"center_x": .875, "center_y": .5}

        Label:
            id: txt_status_head
            text: "Status:"
            opacity: 0
            color: 0,0,0,0.75
            multiline: False
            font_name: "font/CaviarDreams.ttf"
            font_size: self.height / 5
            size_hint: .2, .1
            pos_hint: {"center_x": .875, "center_y": .425}

        Label:
            id: txt_status_body
