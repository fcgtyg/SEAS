<PgLects>:
    FloatLayout:
        canvas:
            Rectangle:
                id: img_bg
                source: "img/bg_light.png"
                size: self.size
                pos: self.pos

        Image:
            id: img_top
            source: "img/widget_100.png"
            keep_ratio: False
            allow_stretch: True
            size_hint: 1, .1
            pos_hint: {"x": .0, "y": .9}

        Image:
            id: img_seas_long_bg
            source: "img/btn_oval_selected.png"
            opacity: .25
            keep_ratio: False
            allow_stretch: True
            size_hint: .25, .1
            pos_hint: {"center_x": .5, "center_y": .95}

        Image:
            id: img_seas_long
            source: "img/img_seas_long.png"
            allow_stretch: True
            size_hint_y: .05
            pos_hint: {"center_x": .5, "center_y": .95}

        Button:
            text: "btn_start"
            opacity: 0
            size_hint: .25, .1
            pos_hint: {"center_x": .5, "center_y": .95}
            on_release: root.on_start()

        Image:
            id: img_connection
            source: "img/ico_connection_wait.png"
            allow_stretch: True
            size_hint: .05, .05
            pos_hint: {"x": .9, "center_y": .95}

        Image:
            id: img_user
            source: "img/pic_user.png"
            allow_stretch: True
            size_hint: .05, .05
            pos_hint: {"x": .05, "center_y": .95}

        Button:
            text: "btn_profile"
            opacity: 0
            size_hint: .05, .05
            pos_hint: {"x": .05, "center_y": .95}
            on_release: root.on_profile()

        Button:
            id: btn_lects
            text: "Lectures"
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/btn_rect.png"
            background_down: "img/btn_rect_selected.png"
            background_disabled_normal: "img/widget_75_black.png"
            size_hint: .15, .1
            pos_hint: {"center_x": .25, "y": .9}

        Button:
            id: btn_stats
            text: "Statistics"
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/btn_rect.png"
            background_down: "img/btn_rect_selected.png"
            background_disabled_normal: "img/widget_75_black.png"
            size_hint: .15, .1
            pos_hint: {"center_x": .75, "y": .9}
            on_release: root.on_stats()

        Image:
            id: img_left
            source: "img/widget_75_black.png"
            keep_ratio: False
            allow_stretch: True
            size_hint: .2, .9
            pos_hint: {"x": .0, "y": .0}

        Button:
            id: btn_exams
            text: "Exams"
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/widget_75.png"
            background_down: "img/widget_75_selected.png"
            background_disabled_normal: "img/widget_75_black.png"
            size_hint: .2, .1
            pos_hint: {"x": .0, "center_y": .56}
            on_release: root.on_exams()
            disabled: True

        Button:
            id: btn_participants
            text: "Participants"
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/widget_75.png"
            background_down: "img/widget_75_selected.png"
            background_disabled_normal: "img/widget_75_black.png"
            size_hint: .2, .1
            pos_hint: {"x": .0, "center_y": .45}
            on_release: root.on_participants()
            disabled: True

        Button:
            id: btn_class_statistics
            text: "Class Statistics"
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 3
            background_normal: "img/widget_75.png"
            background_down: "img/widget_75_selected.png"
            background_disabled_normal: "img/widget_75_black.png"
            size_hint: .2, .1
            pos_hint: {"x": .0, "center_y": .34}
            on_release: root.on_class_statistics()
            disabled: True

        Label:
            id: txt_hint
            text: "No Lecture Selected"
            color: 0,0,0,0.25
            multiline: False
            font_name: "font/LibelSuit.ttf"
            font_size: self.height / 2
            size_hint: .4, .1
            pos_hint: {"center_x": .6, "center_y": .45}

        Label:
            id: txt_lect_code
            text: "..."
            opacity: 0
            color: 0,0,0,0.75
            multiline: False
            font_name: "font/CaviarDreams.ttf"
            font_size: self.height / 3
            size_hint: .85, .1
            pos_hint: {"center_x": .6, "y": .8}

        Label:
            id: txt_lect_name
            text: "..."
            opacity: 0
            color: 0,0,0,0.75
            multiline: False
            font_name: "font/CaviarDreams_Bold.ttf"
            font_size: self.height / 2
            size_hint: .85, .1
            pos_hint: {"center_x": .6, "y": .725}

    FloatLayout:
        id: layout_exams
        opacity: 0

        Image:
            id: img_add_exam_gradient
            source: "img/widget_gradient_black.png"
            opacity: .75
            keep_ratio: False
            allow_stretch: True
            size_hint: .5, .1
